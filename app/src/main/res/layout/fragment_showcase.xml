<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowcaseFragment">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@drawable/showcase_divider"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle">

        <include layout="@layout/card_header_subheader" />

        <include layout="@layout/card_header" />

        <include layout="@layout/card_header_subheader_button" />

        <include layout="@layout/card_title_description" />

        <include layout="@layout/card_title_description_closable" />

        <include layout="@layout/items_button" />

        <include layout="@layout/items" />

        <include layout="@layout/items_horizontal" />
        <include layout="@layout/items_horizontal_button" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>