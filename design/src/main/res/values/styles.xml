<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView">
        <item name="maxLines">1</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">23dp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:fontWeight">700</item>-->
<!--        <item name="android:fontStyle"></item>-->
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19dp</item>
    </style>

    <style name="TextView.Subtitle">
        <item name="android:textColor">@color/Blackout</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="TextView.Subhead">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14dp</item>
    </style>

    <style name="TextView.Button">
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14dp</item>
    </style>

    <style name="TextView.OutButton">
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>